@page "/viewmovies"
@inherits MovieBase
<div class="container">
    <table>
        <tr>
            <td>MovieId</td>
            <td>
                <input type="number" @bind=movie.movieId />
                
            </td>
        </tr>
        <tr>
            <td>Title</td>
            <td>
                <input type="text" @bind=movie.title />
            </td>
        </tr>
        <tr>
            <td>Lang</td>
            <td>
                <input type="text" @bind=movie.language />
            </td>
        </tr>
        <tr>
            <td>Year</td>
            <td>
                <input type="number" @bind=movie.releaseYear />
            </td>
        </tr>
        <tr>
            <td>Actor</td>
            <td>
                <input type="text" @bind=movie.actor />
            </td>
        </tr>
        <tr>
            <td>Director</td>
            <td>
                <input type="text" @bind=movie.director />
            </td>
        </tr>
        <tr>
            <td colspan="1">
                <button @onclick=AddMovie>Add</button>
                <button @onclick=GetMovie>Search</button>
                <button @onclick=DeleteMovie>Delete</button>
                <button @onclick=UpdateMovie>Update</button>
            </td>
        </tr>
    </table>
    <hr />
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Lang</th>
                <th>Year</th>
                <th>Actor</th>
                <th>Director</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in movies)
            {
                <tr>
                    <td>@item.movieId</td>
                    <td>@item.title</td>
                    <td>@item.language</td>
                    <td>@item.releaseYear</td>
                    <td>@item.actor</td>
                    <td>@item.director</td>

                </tr>
            }
        </tbody>
    </table>
</div>

