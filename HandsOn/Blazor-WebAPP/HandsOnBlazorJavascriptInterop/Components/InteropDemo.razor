@inject IJSRuntime JS // Inject the JavaScript runtime service
<h3>InteropDemo</h3>
<button @onclick="Show">Show Isolated JS</button>
@code {
    private IJSObjectReference? _module;// Reference to the JavaScript module
    // Method to call the JavaScript function
    //OnAfterRenderAsync is called after the component has been rendered.
    // It is a lifecycle method in Blazor components.
    // The firstRender parameter indicates if this is the first time the component is being rendered.
    // If it is the first render, we load the JavaScript module
   
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Load the JavaScript module on first render
            _module = await JS.InvokeAsync<IJSObjectReference>(
                "import", "./Components/InteropDemo.razor.js");
        }
    }
    // Method to show a message using the JavaScript function
    async Task Show()
    {
        await _module!.InvokeVoidAsync("showMessage", "Hello Isolated JS");
    }
}
