@if (IsVisible)
{
    <div class="toast-container">
        <div class="toast-message">
            Validation failed. Please correct the errors.
        </div>
    </div>
}

@code {
    private bool IsVisible;

    public async Task ShowAsync()
    {
        IsVisible = true;
        StateHasChanged();

        await Task.Delay(3000);

        IsVisible = false;
        StateHasChanged();
    }
}
